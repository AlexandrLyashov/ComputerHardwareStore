{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "@core/*": ["app/core/*"],
      "@features/*": ["app/features/*"]
    },

    "types": ["node", "undici-types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
